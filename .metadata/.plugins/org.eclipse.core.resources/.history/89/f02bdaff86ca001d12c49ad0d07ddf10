package calendario;

public class Servicios {

	public static void printCabeza() {
		System.out.println("======================");
		System.out.println("LU MA MI JU VI | SA DO");
		System.out.println("======================");
	}

	public static void printMes() {
		int viernes = 5;
		int domingo = 7;
		boolean cV = false;
		boolean cD = false;
		for(int i = 1; i<=100; i++	) {
			cV = i % viernes == 0;
			cD = i % domingo == 0;
			if(!(cV) && !(cD)) {
				printDia(i);
			}
			
		}
	}

	public static void printDomingo(int dia) {
		int l = 10;
		if (dia < l) {
			printN1F(dia);
		} else {
			printN2F(dia);
		}
	}
	public static void printViernes(int dia) {

		int l = 10;
		if (dia < l) {
			printN1(dia);
		} else {
			printN2(dia);
		}
		separador2();

	}

	public static void printDia(int dia) {

		int l = 10;
		if (dia < l) {
			printN1(dia);
		} else {
			printN2(dia);
		}
		separador1();

	}

	public static void printN1(int n) {
		System.out.print(" " + n);
	}

	public static void printN1F(int n) {
		System.out.println(" " + n);
	}

	public static void printN2(int n) {
		System.out.print(n);
	}

	public static void printN2F(int n) {
		System.out.println(n);
	}

	public static void separador1() {
		System.out.print(" ");
	}

	public static void separador2() {
		System.out.print(" | ");
	}

}
